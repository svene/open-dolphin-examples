<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>applicationServlet</servlet-name>
        <servlet-class>com.mycompany.servlet.ApplicationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InvalidationServlet</servlet-name>
        <servlet-class>com.mycompany.servlet.InvalidationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>applicationServlet</servlet-name>
        <url-pattern>/dolphin/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>InvalidationServlet</servlet-name>
        <url-pattern>/dolphin/invalidate</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

</web-app>
